    --*
    --COUNT(*)
    --t.stat_year,
    --t.stat_period_no,
    --t.contract,
    --t.part_no,
    --t.branch,
    t.ad,
    t.bf_balance,
    t.adj_dr,
    t.adj_cr,
    t.debit_note,
    --t.exch_in_cash,
    --t.exch_in_hire,
    --t.revert_qty,
    --t.sale_reverse,
    t.trf_in,
    t.trfc_in,
    t.direct_dr,
    t.other_rec,
    t.credit_note,
    --t.exch_out_cash,
    --t.exch_out_hire,
    t.trf_out,
    t.trfc_out,
    t.other_iss,
    --t.revert_rev,
    --t.sales,
    t.ad_sales,
    t.cf_balance,
    t.revert_bal,
    t.school_stock,
    t.ad_stock,
    to_char(t.rowversion, 'MM/DD/YYYY') rowversion
from REP246_TAB t
where 
  t.stat_year = '&year_i' and
  t.stat_period_no = '&period' and
  --*** All Shops
  --t.Contract not in ('BWHW', 'KWHW', 'RWHW', 'TWHW', 'CMWH', 'SPWH', 'SWHW', 'CTGW', 'APWH', 'SYWH', 'MYWH', 
    --'BSCP', 'CSCP', 'DSCP', 'JSCP', 'RSCP', 'SSCP', 'MS1C', 'MS2C', 'BTSC', 
    --'WSMO', 'SWSS', 'SAOS', 'JWSS', 'SCSM', 'SAPM', 'SESM') --and
  --*** All Warehouses
  t.Contract in ('BWHW', 'KWHW', 'RWHW', 'TWHW', 'CMWH', 'SPWH', 'SWHW', 'CTGW', 'APWH', 'SYWH') --and
  --*** All Service Centers
  --t.Contract in ('BLSP', 'BSCP', 'CSCP', 'DSCP', 'JSCP', 'RSCP', 'SSCP', 'MS1C', 'MS2C', 'BTSC') --AND
  --*** All Megashops
  --t.Contract in ('CJTB', 'DGNB', 'DINB', 'DKBB', 'DMBB', 'DMRB', 'DPLB', 'DRRB', 'DRSB', 'DUTB', 'JESB', 'KSRB', 'MLVB', 'SCHB')
  --t.contract like 'BRMB' and
  --t.Contract in ('DGNB', 'DMBB', 'DMRB', 'DPLB', 'DRSB', 'DUTB', 'DMPB', 'KHLD', 'DMDB', 'DUNB', 'NKPB')
  --t.part_no like 'SHCOM-SINGTECHSTANDARD-02'
order by t.contract, t.part_no
