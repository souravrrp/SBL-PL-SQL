SELECT X.SALES_PART,X.TOT_UNITS,X.TOT_SALES_VALUE
FROM (SELECT T.SALES_PART,
      SUM(T.TOTAL_CASH_UNITS+T.TOTAL_HIRE_UNITS) TOT_UNITS,
      SUM(T.CASH_VALUE+T.TOTAL_NET_HIRE_CASH_VALUE+T.REVERTS_VALUE-T.REVERT_REVERSE_VALUE) TOT_SALES_VALUE
      FROM HPNRET_DIRECT_SALES_TAB t
      WHERE T.YEAR='2014'
      AND T.PERIOD='3'
      AND T.CATALOG_TYPE<>'KOMP'
      GROUP BY T.SALES_PART) X
      ORDER BY X.SALES_PART;
