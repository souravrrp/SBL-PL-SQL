--*** Ledger
select * from LEDGER_ITEM_TAB t
where /*t.identity = 'W0001671-2'*/
T.INVOICE_ID = 4161664

--*** Invoice
select * from INVOICE_TAB t
WHERE /*T.IDENTITY = 'W0001671-2'*/
T.INVOICE_ID = 4161664
/*T.VOUCHER_NO_REF = '1601396818'
AND T.VOUCHER_TYPE_REF = 'N'
AND T.VOUCHER_DATE_REF = TO_DATE('10/17/2016', 'MM/DD/YYYY')*/

--*** Mix Payment
select * from MIXED_PAYMENT_TAB t
WHERE T.MIXED_PAYMENT_ID = 9328067

--*** Mixed Payment Lump Sum
select * from MIXED_PAYMENT_LUMP_SUM_TAB t
WHERE T.IDENTITY = 'W0001671-2'
AND T.LUMP_SUM_TRANS_DATE BETWEEN TO_DATE('&FROM_DATE', 'YYYY/MM/DD') AND TO_DATE('&TO_DATE', 'YYYY/MM/DD')

--*** MIXED_PAYMENT_LEDGER_TRANS
select * from MIXED_PAYMENT_LEDGER_TRANS_TAB t
where t.identity = 'W0001671-2'
and t.mixed_payment_id = 8350554

--*** Gen Led Voucher
select * from GEN_LED_VOUCHER_TAB t
WHERE T.VOUCHER_NO = '1600634789'
AND T.VOUCHER_TYPE = 'F'
AND T.VOUCHER_DATE = TO_DATE('10/17/2016', 'MM/DD/YYYY')

--*** Gen Led Vourcher Row
select * from GEN_LED_VOUCHER_ROW_TAB t
WHERE T.VOUCHER_NO = '1600634789'
AND T.VOUCHER_TYPE = 'F'
AND T.VOUCHER_DATE = TO_DATE('10/17/2016', 'MM/DD/YYYY')

--*** LEDGER_ITEM_TAB
select * from LEDGER_ITEM_TAB t
WHERE T.IDENTITY = 'W0001671-2'
