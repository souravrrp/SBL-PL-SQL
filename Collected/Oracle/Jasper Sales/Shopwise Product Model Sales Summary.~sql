--Shopwise Product Model Sales Summary (Date Range)
SELECT R.SHOP_CODE,
       R.AREA_CODE,
       R.DISTRICT_CODE,
       /*'FUR' 'REF' PRODUCT,*/
       R.PRODUCT_CODE,
       P.PRODUCT_FAMILY,
       /*P.BRAND,*/
       SUM(R.SALES_QUANTITY) TOTAL_SALES_QUANTITY,
       SUM(R.SALES_PRICE) TOTAL_SALES_PRICE
  FROM IFSAPP.SBL_JR_SALES_INV_COMP_VIEW R,
       IFSAPP.SBL_JR_PRODUCT_DTL_INFO    P
 WHERE R.PRODUCT_CODE = P.PRODUCT_CODE
   AND R.SALES_DATE BETWEEN TO_DATE('&FROM_DATE', 'YYYY/MM/DD') AND
       TO_DATE('&TO_DATE', 'YYYY/MM/DD')
   AND R.SALES_PRICE != 0
   AND R.SHOP_CODE LIKE '&SHOP_CODE'
   /*AND P.PRODUCT_FAMILY \*= 'OVEN-MICROWAVE'*\
       IN ('BLENDER',
           'GRINDER',
           'FOOD PROCESSOR',
           'TOASTER',
           'RICE-COOKER',
           'IRON',
           'ELECTRIC-KETTLE',
           'PRESSURE-COOKER',
           'HOOD',
           'NON-STICK-PAN',
           'HAND MIXER',
           'COOKWARE',
           'COFFEE-MAKER')*/
/*AND P.BRAND = \*'Samsung'*\ 'Beko'*/
AND P.PRODUCT_CODE /*LIKE '%FUR-%' = 'SGTV-UA24H4003ARSER'*/
IN /*('SRFUR-MCR201F', 'SRFUR-MCR101F', 'SRFUR-MTR201F', 'SRFUR-MTR101F')*/
/*('SRPC-SPP-5.5',
 'SRPC-SPE-4.5',
 'SRPC-SPE-6.5',
 'SRPAN-SINGER-FRYPAN',
 'SRPAN-SINGER-KORAI',
 'SRPAN-SINGER-RUTI-TAWA',
 'SRPAN-SINGER-FRYPAN-28',
 'SRPAN-SINGER-CASSEROLE-26',
 'SRPAN-SINGER-MULTIPAN-26')*/
 ('SRSM-ZJ8500G', 'SRSM-ZJ9513-G', 'SRSM-ZJ-A6000-G')
 GROUP BY R.AREA_CODE,
          R.DISTRICT_CODE,
          R.SHOP_CODE,
          P.PRODUCT_FAMILY,
          /*P.BRAND,*/
          R.PRODUCT_CODE
 ORDER BY /*R.AREA_CODE,*/ TO_NUMBER(R.DISTRICT_CODE),
          R.SHOP_CODE,
          P.PRODUCT_FAMILY,
          /*P.BRAND,*/
          R.PRODUCT_CODE

