--for_area_code
SELECT S.AREA_CODE
  FROM IFSAPP.SHOP_DTS_INFO S
 GROUP BY S.AREA_CODE
 ORDER BY S.AREA_CODE

--for_district_code
SELECT S.DISTRICT_CODE
  FROM IFSAPP.SHOP_DTS_INFO S
 WHERE $X{IN, S.AREA_CODE, AREA}
 GROUP BY S.DISTRICT_CODE
 ORDER BY TO_NUMBER(S.DISTRICT_CODE)

--for_district_code Single Area
SELECT S.DISTRICT_CODE
  FROM IFSAPP.SHOP_DTS_INFO S
 WHERE S.AREA_CODE = $P{AREA_SS}
 GROUP BY S.DISTRICT_CODE
 ORDER BY TO_NUMBER(S.DISTRICT_CODE)

--for_shop_code
SELECT S.SHOP_CODE
  FROM IFSAPP.SHOP_DTS_INFO S
 WHERE $X{IN, S.DISTRICT_CODE, DISTRICT}
   AND $X{IN, S.AREA_CODE, AREA}
 GROUP BY S.SHOP_CODE
 ORDER BY S.SHOP_CODE

--For_product_group
SELECT TT.PRODUCT_FAMILY PRODUCT_GROUP
  FROM SBL_JR_PRODUCT_DTL_INFO TT
 GROUP BY TT.PRODUCT_FAMILY
 ORDER BY TT.PRODUCT_FAMILY;

--For_PRODUCT_CODE
SELECT KK.PRODUCT_CODE
  FROM SBL_JR_PRODUCT_DTL_INFO KK
 WHERE $X{IN, KK.PRODUCT_FAMILY, PRODUCT_GROUP}
 GROUP BY KK.PRODUCT_CODE
 ORDER BY KK.PRODUCT_CODE;

--Target_Product_Group
SELECT G.PRODUCT_GROUP
  FROM IFSAPP.SBL_JR_RST_PRODUCT_GROUP G
 WHERE G.YEAR = $P{YEAR}
 ORDER BY G.SERIAL_NO

--******NEW
--For_Warehouse
SELECT W.WARE_HOUSE_NAME WAREHOUSE
  FROM IFSAPP.WARE_HOUSE_INFO W
 ORDER BY W.WARE_HOUSE_NAME

--For_Product_Family
SELECT P.PRODUCT_FAMILY
  FROM IFSAPP.SBL_JR_PRODUCT_DTL_INFO P
 GROUP BY P.PRODUCT_FAMILY
 ORDER BY P.PRODUCT_FAMILY

--For_PRODUCT
SELECT P.PRODUCT_CODE PRODUCT
  FROM IFSAPP.SBL_JR_PRODUCT_DTL_INFO P
 WHERE $X{IN, P.PRODUCT_FAMILY, PRODUCT_FAMILY}
 ORDER BY P.PRODUCT_CODE

--For_Part_no Single PF
SELECT P.PRODUCT_CODE PRODUCT
  FROM IFSAPP.SBL_JR_PRODUCT_DTL_INFO P
 WHERE P.PRODUCT_FAMILY = $P{PRODUCT_FAMILY_SGL}
 ORDER BY P.PRODUCT_CODE

--***** for Failure Rate Report
-- Supplier of a Product
select su.vendor_no supplier
  from IFSAPP.PURCHASE_PART_SUPPLIER SU
 where su.part_no = $P{PRODUCT_SS}
   and IFSAPP.IDENTITY_INVOICE_INFO_API.Get_Group_Id('SBL',
                                                     su.vendor_no,
                                                     'Supplier') = '0'
 group by su.vendor_no
 order by su.vendor_no

--For Brand
SELECT P.BRAND
  FROM IFSAPP.SBL_JR_PRODUCT_DTL_INFO P
 WHERE P.PRODUCT_FAMILY = $P{PRODUCT_FAMILY_SS}
 GROUP BY P.BRAND
 ORDER BY P.BRAND
