--National Product Sales Details
SELECT I.SITE,
       (SELECT S.AREA_CODE
          FROM IFSAPP.SHOP_DTS_INFO S
         WHERE S.SHOP_CODE = I.SITE) AREA_CODE,
       (SELECT S.DISTRICT_CODE
          FROM IFSAPP.SHOP_DTS_INFO S
         WHERE S.SHOP_CODE = I.SITE) DISTRICT_CODE,
       I.ORDER_NO,
       I.LINE_NO,
       I.REL_NO,
       I.STATUS,
       I.SALES_DATE,
       I.PRODUCT_CODE,
       P.PRODUCT_FAMILY,
       P.BRAND,
       I.SALES_QUANTITY,
       I.SALES_PRICE,
       I.VAT,
       I.DISCOUNT,
       I.AMOUNT_RSP,
       I.CUSTOMER_NO,
       ifsapp.customer_info_api.Get_Name(I.CUSTOMER_NO) customer_name,
       ifsapp.CUSTOMER_INFO_COMM_METHOD_API.Get_Any_Phone_No(I.CUSTOMER_NO) phone_no,
       IFSAPP.CUSTOMER_INFO_ADDRESS_API.Get_Address1(I.CUSTOMER_NO, 1) || ' ' ||
       IFSAPP.CUSTOMER_INFO_ADDRESS_API.Get_Address2(I.CUSTOMER_NO, 1) customer_address
  FROM IFSAPP.SBL_JR_SALES_DTL_INV I
 INNER JOIN IFSAPP.SBL_JR_PRODUCT_DTL_INFO P
    ON I.PRODUCT_CODE = P.PRODUCT_CODE
 WHERE I.SALES_DATE BETWEEN TO_DATE('&FROM_DATE', 'YYYY/MM/DD') AND
       TO_DATE('&TO_DATE', 'YYYY/MM/DD')
   AND I.SALES_PRICE != 0
   AND P.PRODUCT_FAMILY /*=*/ /*'COMPUTER-LAPTOP'*/ /*'VOLTAGE-STABLIZER'*/ /*'AIR-CONDITIONER' 'IPS-MAIN-COMPONENT'*/
       IN ('REFRIGERATOR-DIRECT-COOL',
           'REFRIGERATOR-SIDE-BY-SIDE',
           'REFRIGERATOR-NOFROST',
           'REFRIGERATOR-FREEZER',
           'REFRIGERATOR-SEMI-COMM',
           'TV-PANEL')
   AND P.BRAND = 'Samsung'
   /*AND I.DISCOUNT != 0*/
   /*AND I.PRODUCT_CODE = 'SRSM-SME-1408'*/ /*in
       ('SRREF-SINGER-BCD-198F',
        'SRREF-SINGER-BCD-198F-DRS',
        'SRREF-SINGER-BCD-198I',
        'SRREF-SINGER-BCD-198I-BVS',
        'SRREF-SINGER-BCD-198I-DRS',
        'SRREF-SINGER-BCD-198I-GMF',
        'SRREF-SINGER-BCD-198R',
        'SRREF-SINGER-BCD-198R-BG',
        'SRREF-SINGER-BCD-198R-RG',
        'SRREF-SINGER-BCD-208I',
        'SRREF-SINGER-BCD-208I-BVS',
        'SRREF-SINGER-BCD-208I-DRS',
        'SRREF-SINGER-BCD-208I-GMF',
        'SRREF-SINGER-BCD-208R',
        'SRREF-SINGER-BCD-208R-BG',
        'SRREF-SINGER-BCD-208R-RG',
        'SRREF-SINGER-BCD-218F',
        'SRREF-SINGER-BCD-218F-DRS',
        'SRREF-SINGER-BCD-218I',
        'SRREF-SINGER-BCD-218I-BVS',
        'SRREF-SINGER-BCD-218I-DRS',
        'SRREF-SINGER-BCD-218I-GMF',
        'SRREF-SINGER-BCD-218R',
        'SRREF-SINGER-BCD-218R-BG',
        'SRREF-SINGER-BCD-218R-RG')*/
 ORDER BY TO_NUMBER((SELECT S.DISTRICT_CODE
                      FROM IFSAPP.SHOP_DTS_INFO S
                     WHERE S.SHOP_CODE = I.SITE)),
          I.ORDER_NO,
          I.LINE_NO,
          I.REL_NO,
          I.PRODUCT_CODE

