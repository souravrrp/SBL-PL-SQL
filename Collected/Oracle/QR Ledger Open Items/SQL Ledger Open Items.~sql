select li.company,
  li.identity,
  li.party_type,
  li.ledger_item_series_id,
  li.ledger_item_id,
  li.full_curr_amount,
  li.cleared_curr_amount,
  li.full_curr_amount - lit.cleared_curr_amount "Open Amount",
  li.currency,
  li.curr_rate,
  li.status_id,
  li.code_a
from LEDGER_ITEM_TAB li
WHERE li.IDENTITY = 'E10018' AND
  li.CODE_A = '10100200' AND
  li.ROWSTATE IN ('Unpaid', 'PartlyPaid')
